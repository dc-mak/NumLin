let !lin_reg ('x) (x : 'x mat)
             ('y) (y : 'y mat) =
  let (x, (!_n, !m)) = sizeM _ x in
  let xy <- new (m, 1) [| x^T * y |] in
  let tmp = matrix m m in
  let (x, x_T_x) = syrk true 1. _ x 0. tmp in
  let (to_del, answer) = posv x_T_x xy in
  let () = freeM to_del in
  (answer, (x, y)) in
lin_reg
;;
